<%= form_for @event do |f| %>
  <%= f.label :description %>
  <%= f.text_field :location %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%= f.select(:attendees, @all_users.collect {|p| [ p.name, p.id ] }, 
                                           { :prompt => "Please select a user"}, 
                                           { :multiple => true, :size => 5 }) %>
  <%= f.submit "Create event" %>
<% end %>